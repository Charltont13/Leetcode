var kidsWithCandies = function(candies, extraCandies) {
    let hogmax = 0;
    let lst = [];

    let n = candies.length;
    for(let i = 0; i < n; i++){
        if(Math.max(...candies) <= candies[i] + extraCandies){
            lst.push(true);
            
            
        }
        else{
            lst.push(false);
        }

    }
    
    return lst;
};
